<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <title>Projects</title>
</head>
<body>
    <div class="container">
        <div >
            <h1>Current Projects</h1>
            <a href="/add">New</a>
        </div>
        <% projectList.forEach(project => { %>
        <div class="project">
                <div class=""><span style="font-weight: bold;">Name:</span> <%= project.name %></div>
                <div class=""><span style="font-weight: bold;">Description:</span> <%= project.description %></div>
                <div class="">
                    <p style="font-weight: bold;">Users:</p>
                    <ul>
                        <% project.users.split(',').forEach(user => { %>
                        <li><%= user.trim() %></li>
                        <% }); %>
                    </ul>
                </div>
            <div class="">
                <a href="/project/<%= projectList.indexOf(project) %>/edit">Edit</a>
            </div>
        </div>
        <% }); %>
    </div>
</body>
</html>
